{
  "debug.inlineValues": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.cursorSurroundingLines": 3,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp",
    // Disable automatic formatting in C#, as it usually create WAY too many
    // unnecessary conflicts.
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false,
    "editor.formatOnType": false
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    // Black does not support formatting sections of code, so we to disable it.
    "editor.formatOnPaste": false,
    "editor.formatOnSaveMode": "file"
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  // Older versions of Fira Code's patched font were called "FuraCode Nerd Font".
  // The previous identifier is left to preserve backwards compatibility.
  "editor.fontFamily": "'FiraCode Nerd Font', 'FuraCode Nerd Font', 'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.gotoLocation.multiple": "goto",
  "editor.mouseWheelScrollSensitivity": 0.3,
  "editor.smoothScrolling": true,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.sortOrder": "type",
  "git.confirmSync": false,
  "git.mergeEditor": true,
  "gitlens.mode.active": "zen",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": false,
  "material-icon-theme.activeIconPack": "react_redux",
  "material-icon-theme.folders.color": "#42a5f5",
  "python.formatting.provider": "black",
  "search.quickOpen.history.filterSortOrder": "recency",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.defaultProfile.osx": "tmux",
  "terminal.integrated.defaultProfile.linux": "tmux",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.profiles.linux": {
    "zsh": {
      "path": "zsh"
    },
    "tmux": {
      "path": "zsh",
      "icon": "terminal-tmux",
      "args": ["-c", "exec ${DOTFILES:-$HOME/.dotfiles}/vscode/vscode-shell.sh"]
    }
  },
  "terminal.integrated.profiles.osx": {
    "zsh": {
      "path": "zsh"
    },
    "tmux": {
      "path": "zsh",
      "icon": "terminal-tmux",
      "args": ["-c", "exec ${DOTFILES:-$HOME/.dotfiles}/vscode/vscode-shell.sh"]
    }
  },
  "todo-tree.highlights.customHighlight": {
    "FIXME:": {
      "icon": "alert",
      "foreground": "#fff",
      "background": "#f06292",
      "iconColour": "#f06292"
    }
  },
  "todo-tree.highlights.defaultHighlight": {
    "type": "tag",
    "foreground": "#fff",
    "background": "#ffbd2a",
    "iconColour": "green",
    "borderRadius": "0"
  },
  "todo-tree.highlights.highlightDelay": 0,
  // Highlight the colons as well
  "todo-tree.general.tags": ["TODO:", "FIXME:"],
  "typescript.updateImportsOnFileMove.enabled": "always",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "window.zoomLevel": 1,
  "workbench.activityBar.visible": true,
  "workbench.colorTheme": "Night Owl (No Italics)",
  "workbench.editor.openPositioning": "first",
  "workbench.iconTheme": "material-icon-theme",
  "zenMode.centerLayout": false,
  "telemetry.telemetryLevel": "off",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  }
}
